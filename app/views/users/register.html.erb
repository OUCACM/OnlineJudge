<h1>Sign Up</h1>

<div >
  <%= form_for :user ,url: users_path , :html => {class: "form-horizontal"}  do |f| %>

      <% if @user.errors.any? %>
          <div id="error_explanation">
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email %>
          <%= f.text_field :email  %>
      </div>

      <div class="form-group">
        <%= f.label :username %>
          <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form-group">
        <%= f.label "confirm password"   %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="form-group">
        <%= f.label :motto %>
        <%= f.text_area :motto %>
      </div>

       <p>
       <%= f.submit :Register , class: "btn btn-default navbar-btn" %>
       </p>

  <% end %>
</div>